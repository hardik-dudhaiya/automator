<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/_1sdp"
    android:layout_gravity="center_horizontal|top"
    android:layout_margin="@dimen/_38sdp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">



    <LinearLayout
        android:layout_margin="@dimen/_1sdp"
        android:gravity="center"
        android:background="@drawable/export_bg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp">

        <com.smileparser.automator.utils.SecondaryTextView
            android:gravity="center_vertical"
            android:text="Export"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>



    <LinearLayout
        android:layout_marginBottom="@dimen/_1sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp">
        <RelativeLayout
            android:layout_marginLeft="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/dark_green" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/local_storage"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_margin="@dimen/_5ssp"
                    android:layout_gravity="center_horizontal"

                    />

                <com.smileparser.automator.utils.SecondaryTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Local Storage"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_14ssp" />

            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout

            android:layout_marginRight="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/dark_green" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/android_share"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_margin="@dimen/_5ssp"
                    android:layout_gravity="center_horizontal"

                    />

                <com.smileparser.automator.utils.SecondaryTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Android Share"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_14ssp" />

            </LinearLayout>

        </RelativeLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/_1sdp"
        android:layout_marginRight="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:gravity="center"
        android:layout_marginBottom="@dimen/_1sdp"
        android:background="@drawable/export_bg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp">

        <com.smileparser.automator.utils.SecondaryTextView
            android:gravity="center_vertical"
            android:text="Export"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>





    <LinearLayout
        android:layout_marginBottom="@dimen/_1sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp">
        <RelativeLayout
            android:layout_marginLeft="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/dark_green" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/local_storage"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_margin="@dimen/_5ssp"
                    android:layout_gravity="center_horizontal"

                    />

                <com.smileparser.automator.utils.SecondaryTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Local Storage"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_14ssp" />

            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout

            android:layout_marginRight="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/dark_green" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/android_share"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_margin="@dimen/_5ssp"
                    android:layout_gravity="center_horizontal"

                    />

                <com.smileparser.automator.utils.SecondaryTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Android Share"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_14ssp" />

            </LinearLayout>

        </RelativeLayout>



    </LinearLayout>







    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatCheckBox
            android:buttonTint="@color/dark_red"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            />
        <TextView
            android:gravity="center_vertical"
            android:textColor="@color/dark_green"
            android:text="Reset variable on import"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>







