<?xml version="1.0" encoding="utf-8"?>
                                                                   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical" android:tag="layout/layout_dial_phone_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <EditText
            android:id="@+id/edt_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:backgroundTint="@color/colorAccent"
            android:digits="0123456789"
            android:drawablePadding="@dimen/_1sdp"
            android:hint="Phone Number"
            android:imeOptions="actionDone"
            android:inputType="phone|textPhonetic"
            android:maxLength="13"
            android:padding="@dimen/_5sdp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp" />

        <RadioGroup
            android:id="@+id/radio_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/make_call"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="false"
                android:text="Make Call" />

            <RadioButton
                android:id="@+id/stop_call"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Stop Call" />
        </RadioGroup>
    </LinearLayout>
         