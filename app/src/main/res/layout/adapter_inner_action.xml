<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_8sdp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">


        <ImageView
            android:id="@+id/img_icon_action"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@android:color/holo_orange_dark" />

        <com.smileparser.automator.utils.SecondaryTextView
            android:id="@+id/tv_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/_20sdp"
            android:text="text"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_14ssp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/action_button_border"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatCheckBox
            android:layout_gravity="center_vertical"
            android:id="@+id/ck"
            android:buttonTint="@color/blue"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
           />

        <com.smileparser.automator.utils.SecondaryTextView
            android:id="@+id/tv_action_inner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:paddingLeft="@dimen/_10sdp"
            android:text="text"
            android:textColor="@color/blue"
            android:textSize="@dimen/_14ssp" />

        <LinearLayout
            android:gravity="center"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/blue_cut"
            android:layout_width="@dimen/_38sdp"
            android:layout_height="@dimen/_38sdp">
            <ImageView

                android:id="@+id/img_icon_action_inner"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                />

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:background="@drawable/action_button_border"
        android:layout_margin="@dimen/_8sdp"
        android:visibility="gone"
        android:id="@+id/ll_contain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">




        <TextView
            android:drawableRight="@color/blue"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Less then"
            android:gravity="center_vertical"
            android:layout_marginLeft="30dp"/>

        <View
            android:layout_marginRight="@dimen/_2sdp"
            android:layout_marginLeft="@dimen/_2sdp"
            android:background="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_1ssp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Greater then"
            android:gravity="center_vertical"
            android:layout_marginLeft="30dp"/>
        <View
            android:background="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_1ssp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Equal to"
            android:gravity="center_vertical"
            android:layout_marginLeft="30dp"/>

    </LinearLayout>



</LinearLayout>